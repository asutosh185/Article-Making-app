
<%= render 'shared/errors', obj:@user %>
<div class= 'row'>
   <div class='col-xs-12'>
                <%= form_for(@user, :html => {class:"form", role: "form"}) do |f| %> 
                                <div class="form group row">
                                                <div class="col-sm-4 col-form-label">
                                                        
                                                        <%= f.label :username %>
                                                </div>
                                                <div class='col-sm-10'>
                                                <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                                                </div>
                                </div>           
                                <div class="form group row">
                                        <div class="col-sm-6 col-form-label">
                                                <%= f.label :email %>
                                        </div>
                                        <div class='col-sm-6 '>
                                                <%= f.text_area :email,  class: "form-control", placeholder: "Enter an email", autofocus: true %>
                                        </div>
                                </div> 
                                  <div class="form group row">
                                        <div class="col-sm-6 col-form-label">
                                                <%= f.label :password %>
                                        </div>
                                        <div class='col-sm-6 '>
                                                <%= f.password_field :password, class: "form-control",type:"password", placeholder: "Enter password", autofocus: true %>
                                        </div>
                                </div>        
                                        
                                        <div class="form group row">
                                               <div class="col-sm-offset-2 col-sm-8">
                                                   <%= f.submit(@user.new_record? ? "Sign up" : "update account", class:'btn btn-primary btn-md ') %>
                                                </div>
                                        </div>
                <% end %>
                        <div class="col-xs-4 col-xs-offset-4">
                                [  <%= link_to "cancel request and return to article listing" , articles_path %> ]
                        </div>
        </div>
</div>