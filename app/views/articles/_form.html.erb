<%= render 'shared/errors', obj:@article %>
<div class= 'row'>
   <div class='col-xs-12'>
                <%= form_for(@article, :html => {class:"form", role: "form"}) do |f| %> 
                                <div class="form group row">
                                                <div class="col-sm-2 col-form-label">
                                                        
                                                        <%= f.label :title %>
                                                </div>
                                                <div class='col-sm-10'>
                                                <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                                                </div>
                                </div>           
                                <div class="form group row">
                                        <div class="col-sm-6 col-form-label">
                                                <%= f.label :description %>
                                        </div>
                                        <div class='col-sm-6 '>
                                                <%= f.text_area :description,rows: 10,cols: 50,  class: "form-control", placeholder: "Description of article", autofocus: true %>
                                        </div>
                                </div>      
                                        
                                        <div class="form group row">
                                               <div class="col-sm-offset-2 col-sm-8">
                                                   <%= f.submit class:'btn btn-primary btn-md ' %>
                                                </div>
                                        </div>
                <% end %>
                        <div class="col-xs-4 col-xs-offset-4">
                                [  <%= link_to "cancel request and return to article listing" , articles_path %> ]
                        </div>
        </div>
</div>