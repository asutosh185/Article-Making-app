<h1 align="center"> All listing page</h1>
  <% @article.each do |article| %>
  <div class="card">
        <div class="col-xs-8 col-xs-offset-2">
                  <div class="well well-lg">
                          <div class="card-header">
                              <%= link_to article.title, article_path(article) %>
                            </div>
                            <div class="card-body">
                                  <%= truncate(article.description, length: 100) %>
                            </div>
                          <div class="card-actions">
                              <%= link_to "Edit the article", edit_article_path(article) , class: "btn btn-primary" %>

                        
                              <%= link_to "Delete the article", article_path(article), method: :delete , 
                                            data: {confirm: "Are you sure ,you want to delete the article", class: "btn btn-danger"} %>
                            </div>
                  </div>
       </div>
</div>
  <% end %>


