<h2 align="center">Title:<%= @article.title %></h2>

<% if @article.user %>
   <div class="well col-xs-8 col-xs-offset-2">
     <ul class="listing">
                <div class="card text-center">
                    <div class="well col-md-4 col-md-offset-4">
                       
                            <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                            <li class="card-header">
                                <%= link_to @article.user.username, user_path(@article.user) %>
                            </li>
                            <li><small><%= pluralize(@article.user.articles.count , "article") if @article.user.articles %>
                            </small></li>
                    </div>
                </div>
            </ul>
    <% end %>
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
    <h3 align="center"><%= simple_format(@article.description) %></h3>
   <div class="article-actions">
   <% if logged_in? && current_user == @article.user %>
        <%= link_to "Edit the article", edit_article_path(@article) , class: "btn btn-primary" %>

             
           <%= link_to "Delete the article", article_path(@article), method: :delete , 
                                data: {confirm: "Are you sure ,you want to delete the article", class: "btn btn-danger"} %>
     <% end %>                           
            <%= link_to  "View all article", article_path, class: "btn btn-xs btn-success" %>
             </div>
        </div>